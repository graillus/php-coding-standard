{
    "name": "graillus/php-coding-standard",
    "description": "My opinionated PHP coding standard",
    "type": "phpcodesniffer-standard",
    "license": "MIT",
    "authors": [
        {
            "name": "Robin Graillon",
            "email": "robin.graillon@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.1",
        "slevomat/coding-standard": "4.5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Graillus\\PhpCodingStandard\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Graillus\\PhpCodingStandard\\": "tests"
        }
    }
}
